<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Cruzeirao"  transaction-type="RESOURCE_LOCAL">
		<class>sistema.models.Campeonato</class>
		<class>sistema.models.Categoria</class>
		<class>sistema.models.Fase</class>
		<class>sistema.models.Gol</class>
		<class>sistema.models.Grupo</class>
		<class>sistema.models.Inscricao</class>
		<class>sistema.models.Inscrito</class>
		<class>sistema.models.Juiz</class>
		<class>sistema.models.Local</class>
		<class>sistema.models.Partida</class>
		<class>sistema.models.PartidaFutebol</class>
		<class>sistema.models.Rodada</class>
		<class>sistema.models.Usuario</class>
		<class>sistema.models.Equipe</class>
		<class>sistema.models.Cartao</class>

		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:derby://localhost:1527/Cruzeirao;create=true" />
			<property name="javax.persistence.jdbc.user" value="app" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />
			<property name="javax.persistence.jdbc.password" value="123"/>
			<property name="eclipselink.ddl-generation" value="create-tables"/>
		</properties>

	</persistence-unit>
</persistence>
